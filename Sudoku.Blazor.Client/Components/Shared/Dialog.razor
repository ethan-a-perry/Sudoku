@if (Opened) {
    <div class="modal--overlay">
        <div class="modal--box">
            @Content
        
            <button class="close" @onclick="CloseDialog"><svg><use href="/assets/icons/icons.svg#close"/></svg></button>
        </div>
    </div>
}

@code {
    [Parameter] public RenderFragment Content { get; set; }
    
    [Parameter] public bool Opened { get; set; }
    [Parameter] public EventCallback CloseButtonClicked { get; set; }
    
    public void CloseDialog() {
        Opened = false;
        CloseButtonClicked.InvokeAsync();
    }
}